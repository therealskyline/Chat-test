{
    "install": "pip3 install --user -r requirements.txt",
    "start": "python3 chat.py",
    "watch": {
      "ignore": [
        "\\.pyc$"
      ],
      "install": {
        "include": [
          "^requirements\\.txt$"
        ]
      },
      "restart": {
        "include": [
          "\\.py$",
          "^start\\.sh"
        ]
      },
      "throttle": 1000
    }
  }
  